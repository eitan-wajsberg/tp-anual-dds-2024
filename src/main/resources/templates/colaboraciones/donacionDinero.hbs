{{#partial "contenido"}}
    <div class="pt-5"></div>
    <div class="m-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-12">
                <h1 class="title text-center">Donar dinero</h1>
                <div class="pt-5 pb-4"></div> <!-- separador -->
                <p class="mb-2">Elegir entre hacer una donación por única vez, o de forma periódica.
                    Si desea hacer una donación única, asegúrese de elegir "Ninguna" en el campo de frecuencia.</p>
                <form method="POST" action="/donacionDinero">
                    <div class="mt-3">
                    <div class="col-12">
                        <input type="text" name="monto" placeholder="Monto" class="w-100">
                        <!-- Mediante la propiedad name defino bajo que key voy a obtener el valor ingresado en el form-->
                    </div>

                    <div class="col-12 mt-2">
                        <div class="input-group">
                            <div class="input-group-text selection">Tipo</div>
                            <select id="frecuencia" name="unidadFrecuencia" class="custom-select">
                                <option value="Ninguna">Ninguna</option>
                                <option value="Diaria">Diaria</option>
                                <option value="Semanal">Semanal</option>
                                <option value="Mensual">Mensual</option>
                                <option value="Anual">Anual</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-12 mt-4">
                        <button type="submit" class="w-100">Donar</button>
                    </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{/partial}}

{{> templates/base titulo="Donacion de dinero" mostrarSeccion=true seccion="Donación de dinero" mostrarPersonaHumana=true mostrarIrAtras=true paginaAtras="/" }}