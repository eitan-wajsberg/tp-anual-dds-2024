{{#partial "contenido"}}
    <div class="pt-5"></div>
    <div class="m-5">
        <div class="row justify-content-center">
            <div class="col-md-5 col-12">
                <form class="me-4 ms-4" method="POST" action="/usuarios">
                    <h1 class="title text-center">Crear {{#if personaHumana}}persona humana{{else}}persona jurídica{{/if}}</h1>
                    <div class="pt-5 pb-4"></div> <!-- separador -->
                    <div class="row">
                        <input type="text" name="usuario" placeholder="Usuario">
                    </div>
                    <div class="row mt-2">
                        <input type="password" name="clave" placeholder="Contraseña">
                    </div>
                    <div class="row mt-2">
                        <input type="password" name="claveRepetida" placeholder="Confirmar contraseña">
                    </div>
                    <div class="row mt-2">
                        <div class="form-check d-flex align-items-center">
                            <input class="form-check-input" type="checkbox" id="flexCheckDefault">
                            <label class="form-check-label ms-2" for="flexCheckDefault">
                                Mostrar contraseña
                            </label>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <button>Registrarse</button>
                    </div>
                </form>
                <div class="row mt-5 mb-5 text-center">
                    <hr>
                    <label class="dark-grey-text fw-bold">¿Ya ténes una cuenta? <a href="login.html" class="light-blue">Inicia sesión</a> </label>
                </div>
            </div>
        </div>
    </div>
{{/partial}}
{{> templates/base titulo="Registro" mostrarInicioSesion=true mostrarIrAtras=true paginaAtras="/eleccion" }}