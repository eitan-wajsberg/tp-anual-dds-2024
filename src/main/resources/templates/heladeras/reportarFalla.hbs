{{#partial "contenido"}}
    <div class="pt-5"></div>
    <div class="m-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-12">
                <h1 class="title text-center">Reportar falla</h1>
                <div class="pt-5 pb-4"></div> <!-- separador -->
                <form id="uploadForm" method="POST" action="reportesFalla/{{heladeraId}}">
                    <div class="mt-3">
                        <div class="col-12 mt-2">
                            <div class="input-group">
                                <div class="input-group-text selection">Tipo de falla</div>
                                <select id="tiposFalla" name="tipoFalla" class="custom-select">
                                    <option value="FALLA_TECNICA">Falla técnica</option>
                                    <option value="FALLO_TEMPERATURA">Fallo en la temperatura</option>
                                    <option value="POSIBLE_FRAUDE">Posible fraude</option>
                                    <option value="OTRO">Otro</option>
                                </select>
                            </div>
                        </div>
                        <h4 class="fw-bold fs-5 mt-5">Descripción</h4>
                        <textarea class="form-control mb-10 textarea" id="descripcionFalla" name="descripcionFalla" rows="8" required></textarea>
                        <div class="col-12 mt-4">
                            <button id="submitButton" type="submit" class="w-100">Reportar</button>
                        </div>
                    </div>
                    {{#if error}}
                        <div class="row mt-2 justify-content-center">
                            <p class="error text-center">{{error}}</p>
                        </div>
                    {{/if}}
                </form>
            </div>
        </div>
    </div>
    <script src="/js/manejadorFormulario.js"></script>
{{/partial}}

{{> templates/base titulo="Reportar falla" mostrarSeccion=true seccion="Reportar falla" mostrarIrAtras=true paginaAtras="/heladeras" }}
