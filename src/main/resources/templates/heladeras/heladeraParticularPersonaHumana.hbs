{{#partial "contenido"}}
    <!-- Sidebar -->
    <section class="row flex-grow-1 ms-sm-5 me-sm-5 mt-3 ms-3 me-3">
        <!-- Sidebar -->
        <nav class="col-md-4 pt-4 sidebar">
            <!-- Info Heladera -->
            <div class="card rounded-3 info-heladera">
                <article class="mb-4">
                    <div class="d-flex align-items-center mb-4">
                        <a href="/mapaHeladeras" class="dark-text justify-content-start">
                            <span class="iconify align-middle" data-icon="ep:back" data-width="20" data-height="20"></span>
                        </a>
                        <h5 class="card-result-title mb-0 ms-4" style="line-height: 1.2;">{{heladera.nombre}}</h5>
                    </div>
                    <p class="card-result-text">{{heladera.direccion.nomenclatura}}</p>
                    <p class="card-result-text">Capacidad de {{heladera.capacidadMaximaViandas}} viandas</p>
                </article>

                <h5 class="card-Item-title">Viandas ({{heladera.viandas.length}})</h5>

                <div class="scrollable-Items">
                    {{#each heladera.viandas}}
                        <div class="card rounded-3 mt-2 mb-2">
                            <div class="card-Item-body">
                                <h5 class="card-Item-text mb-1" style="font-size: 0.7rem;">{{this.comida}}</h5>
                                <p class="card-Item-text">Vence: {{this.fechaCaducidad}}</p>
                                <p class="card-Item-text">{{this.caloriasEnKcal}} calorías</p>
                                <p class="card-Item-text">{{this.pesoEnGramos}} gramos</p>
                            </div>
                        </div>
                    {{/each}}
                </div>


                <button class="mt-3 p-1 little-font mb-1 w-100" style="position: relative;">Suscribirme</button>
            </div>

            <div class="py-2 mt-4 border-top text-center" style="font-size:0.8rem; color: #5d5d5d;">
                <p class="mb-0">¿La Heladera tiene algún Problema?
                    <a href="/reporteFallaHeladera/{{heladera.id}}" class="link-primary">Reportar Falla</a>
                </p>
            </div>
        </nav>
        <!-- Mapa -->
        <main class="col-md-8 pt-4 d-flex flex-column mb-5">
            <div id="map"></div>
        </main>

    </section>

    <!-- Script para manejar el mapa y los datos de heladeras -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var heladera = {{{jsonHeladera}}};  // Triple mustache para evitar escaping y pasar datos correctamente
            console.log(heladera);  // Verifica los datos en la consola
            addMarker(heladera);   // Llama a la función para agregar marcadores
        });
    </script>
{{/partial}}

{{> templates/base titulo="Heladera" mostrarMapa= true mostrarSeccion=true seccion="Detalle Heladera" mostrarPersonaHumana=true }}
