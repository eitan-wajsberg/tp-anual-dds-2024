{{#partial "contenido"}}
    <div class="m-5">
        <div class="row justify-content-center">
            <form method="POST" action="/tecnicos">
                <h4 class="fw-bold fs-5">Información básica</h4>
                <p class="mb-3">Ingresar los datos personales básicos del técnico.</p>

                <div class="row mb-3">
                    <div class="col-12 col-md-6 mb-2 mb-md-0">
                        <input name="nombre" type="text" class="w-100" required pattern="^[A-Z][a-zA-ZáéíóúñÑ]{1,49}$" placeholder="Nombre" title="El nombre debe comenzar con mayúscula y tener entre 2 y 50 caracteres." oninvalid="this.setCustomValidity('Por favor, ingrese un nombre válido.')" oninput="this.setCustomValidity('')">
                    </div>
                    <div class="col-12 col-md-6 mb-2 mb-md-0">
                        <input name="apellido" type="text" class="w-100" required pattern="^[A-Z][a-zA-ZáéíóúñÑ]{1,49}$" placeholder="Apellido" title="El apellido debe comenzar con mayúscula y tener entre 2 y 50 caracteres." oninvalid="this.setCustomValidity('Por favor, ingrese un apellido válido.')" oninput="this.setCustomValidity('')">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-12 col-md-6 mb-2 mb-md-0">
                        <input name="cuil" type="text" class="w-100" required placeholder="CUIL" pattern="^\\d{2}-\\d{8}-\\d{1}$" title="El CUIL debe seguir el formato XX-XXXXXXXX-X." oninvalid="this.setCustomValidity('Por favor, ingrese un CUIL válido.')" oninput="this.setCustomValidity('')">
                    </div>
                    <div class="col-6">
                        <div class="input-group">
                            <select id="documentos" name="tipoDocumento" class="custom-select" required>
                                <option value="dni" selected>DNI</option>
                                <option value="libreta-civica">LIBRETA CÍVICA</option>
                                <option value="libreta-enrolamiento">LIBRETA DE ENROLAMIENTO</option>
                                <option value="pasaporte">PASAPORTE</option>
                            </select>
                            <input type="text" class="custom-input" name="nroDocumento" placeholder="Número de documento" required pattern="\\d{1,12}" title="El número de documento debe contener entre 1 y 12 dígitos." oninvalid="this.setCustomValidity('Por favor, ingrese un número de documento válido.')" oninput="this.setCustomValidity('')">
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-12 col-md-12 mb-2 mb-md-0">
                        <input name="radio" type="number" class="w-100" placeholder="Radio máximo en kilómetros para ser avisado" required min="1" title="El radio debe ser un número mayor a 0." oninvalid="this.setCustomValidity('Por favor, ingrese un radio válido.')" oninput="this.setCustomValidity('')">
                    </div>
                </div>

                <h4 class="fw-bold fs-5 mt-5">Medios de contacto</h4>
                <p class="mb-3">Indicar al menos un medio de contacto.</p>

                <div class="row mb-3">
                    <div class="col-12 col-md-4 mb-2 mb-md-0">
                        <input name="whatsapp" type="text" class="w-100" placeholder="WhatsApp" pattern="^\\+?[0-9]{10,15}$" title="Formato: +549XXXXXXXXX" oninvalid="this.setCustomValidity('Por favor, ingrese un número de WhatsApp válido.')" oninput="this.setCustomValidity('')">
                    </div>
                    <div class="col-12 col-md-4 mb-2 mb-md-0">
                        <input name="telegram" type="text" class="w-100" placeholder="Telegram" pattern="^@?[a-zA-Z0-9_]{5,32}$" title="Formato: @usuario o usuario" oninvalid="this.setCustomValidity('Por favor, ingrese un usuario de Telegram válido.')" oninput="this.setCustomValidity('')">
                    </div>
                    <div class="col-12 col-md-4 mb-2 mb-md-0">
                        <input name="correo" type="email" class="w-100" placeholder="Correo electrónico" required title="Por favor, ingrese un correo electrónico válido." oninvalid="this.setCustomValidity('Por favor, ingrese un correo electrónico válido.')" oninput="this.setCustomValidity('')">
                    </div>
                </div>

                <h4 class="fw-bold fs-5 mt-5">Dirección</h4>
                <p class="mb-3">La dirección es un campo obligatorio. Por favor, asegúrese de completarlo correctamente.</p>
                <div class="row mb-3">
                    <div class="col-12 col-md-6 mb-2 mb-md-0">
                        <input name="calle" type="text" class="w-100" placeholder="Calle" required pattern="^[A-Za-z0-9áéíóúñÑ ]{2,50}$" title="La calle debe tener entre 2 y 50 caracteres." oninvalid="this.setCustomValidity('Por favor, ingrese una calle válida.')" oninput="this.setCustomValidity('')">
                    </div>
                    <div class="col-12 col-md-6 mb-2 mb-md-0">
                        <input name="altura" type="number" class="w-100" placeholder="Altura" required aria-label="Altura" min="1" title="La altura debe ser un número mayor a 0." oninvalid="this.setCustomValidity('Por favor, ingrese una altura válida.')" oninput="this.setCustomValidity('')">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 col-md-6 mb-2 mb-md-0">
                        <input name="provincia" type="text" class="w-100" placeholder="Provincia" required pattern="^[A-Za-záéíóúñÑ ]{2,50}$" title="La provincia debe tener entre 2 y 50 caracteres." oninvalid="this.setCustomValidity('Por favor, ingrese una provincia válida.')" oninput="this.setCustomValidity('')">
                    </div>
                    <div class="col-12 col-md-6 mb-2 mb-md-0">
                        <input name="municipio" type="text" class="w-100" placeholder="Municipio" required pattern="^[A-Za-záéíóúñÑ ]{2,50}$" title="El municipio debe tener entre 2 y 50 caracteres." oninvalid="this.setCustomValidity('Por favor, ingrese un municipio válido.')" oninput="this.setCustomValidity('')">
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-12">
                        <button class="w-100" type="submit">Dar de alta</button>
                    </div>
                </div>
                {{#if error}}
                    <div class="row mt-2 justify-content-center">
                        <p class="error text-center">{{error}}</p>
                    </div>
                {{/if}}
            </form>
        </div>
    </div>
{{/partial}}

{{> templates/base titulo="Alta de técnicos" mostrarAdmin=true mostrarIrAtras=true paginaAtras="/admin"}}
